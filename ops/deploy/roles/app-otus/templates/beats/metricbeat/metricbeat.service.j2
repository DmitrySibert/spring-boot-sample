[Unit]
Description=Metricbeat
Documentation=https://www.elastic.co/guide/en/beats/metricbeat/current/index.html
Wants=network-online.target
After=network-online.target

[Service]
User={{ target_user }}
ExecStart={{ metricbeat_remote_dest }}/{{ metricbeat_name }}/metricbeat -c {{metricbeat_remote_dest}}/{{ metricbeat_name }}/metricbeat.yml
Restart=always

[Install]
WantedBy=multi-user.target