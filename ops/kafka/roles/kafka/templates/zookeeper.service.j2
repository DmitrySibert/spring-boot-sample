[Unit]
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Environment=JAVA_HOME={{ java_home }}/jdk-18
Type=simple
User={{ kafka_user }}
ExecStart={{ kafka_home }}/{{ kafka_arch_name }}-{{ kafka_ver }}/bin/zookeeper-server-start.sh {{ kafka_home }}/{{ kafka_arch_name }}-{{ kafka_ver }}/config/zookeeper.properties
ExecStop={{ kafka_home }}/{{ kafka_arch_name }}-{{ kafka_ver }}/bin/zookeeper-server-stop.sh
Restart=on-failure

[Install]
WantedBy=multi-user.target
